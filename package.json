{
  "name": "pgats-02-api",
  "version": "1.0.0",
  "description": "API REST e GraphQL para aprendizado de testes e automação",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "mocha test/**/*/*.test.js --recursive --reporter mochawesome",
    "test-controller": "mocha test/controller/**/*.test.js --recursive --reporter mochawesome",
    "test-controllerRest": "mocha test/controller/rest/*.test.js --recursive --reporter mochawesome",
    "test-controllerGraphql": "mocha test/controller/graphql/*.test.js --recursive --reporter mochawesome",
    "test-external": "mocha test/external/**/*.test.js --recursive --reporter mochawesome",
    "test-externalRest": "mocha test/external/rest/*.test.js --recursive --reporter mochawesome",
    "test-externalGraphql": "mocha test/external/graphql/*.test.js --recursive --reporter mochawesome",
    "test-k6": "k6 run test/k6/tests/banking-api.test.js",
    "test-k6:report": "k6 run test/k6/tests/banking-api.test.js --out json=test/k6/results.json",
    "test-k6:generate-report": "node test/k6/generate-report.js"
  },
  "keywords": [
    "api",
    "express",
    "graphql",
    "apollo",
    "testing",
    "automation"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@apollo/server": "^5.0.0",
    "apollo-server-express": "^3.13.0",
    "axios": "^1.11.0",
    "bcryptjs": "^2.4.3",
    "chai": "^6.0.1",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.18.2",
    "graphql": "^16.11.0",
    "graphql-tag": "^2.12.6",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "mocha": "^11.7.1",
    "sinon": "^21.0.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0"
  },
  "devDependencies": {
    "mochawesome": "^7.1.3",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.4"
  }
}
